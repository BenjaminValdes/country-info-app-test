{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": "./src",
  },
  "include": ["src/**/*.ts", "src/utils.ts"],
  "exclude": ["node_modules"]
}